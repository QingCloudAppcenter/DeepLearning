{
    "type":"array",
    "properties":[
        {
            "key":"cluster",
            "description":"Deep learning cluster properties",
            "type":"array",
            "properties":[
                {
                    "key":"name",
                    "label":"Name",
                    "description":"The name of the deep learning service on Docker",
                    "type":"string",
                    "default":"Deep Learning",
                    "required":"no"
                },
                {
                    "key":"description",
                    "label":"Description",
                    "description":"The description of the deep learning service on Docker",
                    "type":"string",
                    "default":"Deep learning container service with Caffe, TensorFlow, Keras and PyTorch support both GPUs and CPUs",
                    "required":"no"
                },
                {
                    "key": "resource_group",
                    "label": "Resource Configuration",
                    "description": "The resource configuration of the service",
                    "type": "string",
                    "default": "8C40G1GPU",
                    "customizable": false,
                    "range": ["8C40G1GPU", "16C80G2GPU", "32C160G4GPU", "64C320G8GPU"]
                },
                {
                    "key":"vxnet",
                    "label":"VxNet",
                    "description":"Choose a vxnet to join",
                    "type":"string",
                    "default":"",
                    "required":"yes"
                },
                {
                    "key":"dl_node",
                    "label":"dl Node",
                    "description":"node properties",
                    "type":"array",
                    "properties":[
                        {
                            "key":"instance_class",
                            "label":"Instance Class",
                            "description":"The instance type for dl to run，such as standard，enterprise",
                            "type":"integer",
                            "default":201,
                            "range":[
                                201
                            ],
                            "required":"yes",
                            "changeable_when_create": false
                        },
                        {
                            "key":"cpu",
                            "label":"CPU",
                            "description":"CPUs of each node",
                            "type":"integer",
                            "default":8,
                            "range":[
                                8,
                                16,
                                32,
                                64
                            ],
                            "resource_group": [8, 16, 32, 64],
                            "required":"no"
                        },
                        {
                            "key":"gpu",
                            "label":"GPU",
                            "description":"GPUs of each node",
                            "type":"integer",
                            "default":1,
                            "range":[
                                1,
                                2,
                                4,
                                8
                            ],
                            "resource_group": [1, 2, 4, 8],
                            "required":"no"
                        },
                        {
                            "key":"memory",
                            "label":"Memory",
                            "description":"memory of each node (in MiB)",
                            "type":"integer",
                            "default":40960,
                            "range":[
                                40960,
                                81920,
                                163840,
                                327680
                            ],
                            "resource_group": [40960, 81920, 163840, 327680],
                            "required":"no"
                        },
                        {
                            "key": "volume_class",
                            "label": "Volume Class",
                            "description": "The volume type for each instance，such as capacity，NeonSAN",
                            "type": "integer",
                            "default": 2,
                            "range": [
                                2,
                                5
                            ],
                            "required": "yes"
                        },
                        {
                            "key":"volume_size",
                            "label":"Volume Size",
                            "description":"The volume size for each node",
                            "type":"integer",
                            "default":100,
                            "step":10,
                            "required":"yes"
                        },
                        {
                            "key":"count",
                            "label":"Node Count",
                            "description":"Number of nodes for dl to create",
                            "type":"integer",
                            "default":1,
                            "step":1,
                            "max": 32,
				            "min": 1,
                            "required":"yes"
                        }
                    ]
                }
            ]
        },
        {
            "key":"env",
            "description":"Service properties",
            "type":"array",
            "properties":[
                {
                    "key":"QingStor",
                    "label":"QingStor对象存储",
                    "description":"Whether to use QingStor or not",
                    "type":"boolean",
                    "default":false,
                    "range":[
                        true,
                        false
                    ],
                    "required":"no"
                },
                {
                    "key": "access_key_id",
                    "label": "Access key id",
                    "description": "API access key id",
                    "type": "accesskey",
                    "changeable": false,
                    "required": "yes"
                }
            ]
        }
    ]
}